<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST DETAILS"
        android:id="@+id/tv_c_name"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#fff5edc8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_lvl"
        android:layout_marginTop="44dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/tv_c_name"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/tv_race"
        android:layout_alignTop="@+id/tv_lvl"
        android:layout_toRightOf="@+id/tv_c_name"
        android:layout_toEndOf="@+id/tv_c_name"
        android:paddingLeft="16dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/tv_gender"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/tv_lvl"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/tv_prof"
        android:layout_alignBottom="@+id/tv_gender"
        android:layout_toRightOf="@+id/tv_c_name"
        android:layout_toEndOf="@+id/tv_c_name"
        android:paddingLeft="16dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level:"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/tv_lvl"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/tv_gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="16dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race:"
        android:id="@+id/textView11"
        android:layout_above="@+id/tv_gender"
        android:layout_toLeftOf="@+id/tv_race"
        android:layout_toStartOf="@+id/tv_race"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profession:"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/tv_prof"
        android:layout_toLeftOf="@+id/tv_prof"
        android:layout_toStartOf="@+id/tv_prof"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday:"
        android:id="@+id/textView3"
        android:layout_below="@+id/tv_gender"
        android:layout_toLeftOf="@+id/tv_gender"
        android:layout_toStartOf="@+id/tv_gender"
        android:layout_marginTop="30dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_created"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:paddingLeft="16dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deaths:"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/tv_created"
        android:layout_toLeftOf="@+id/tv_prof"
        android:layout_toStartOf="@+id/tv_prof"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_deaths"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/tv_c_name"
        android:layout_toEndOf="@+id/tv_c_name"
        android:paddingLeft="16dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playtime:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="30dp"
        android:textColor="#fff5edc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:id="@+id/tv_c_age"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/tv_created"
        android:layout_alignStart="@+id/tv_created"
        android:textColor="#fff5edc8"
        android:paddingLeft="16dp" />

</RelativeLayout>